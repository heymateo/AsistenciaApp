<Page x:ConnectionId='1'
    x:Class="AsistenciaApp.Views.CalendarioPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AsistenciaApp.ViewModels"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:models="using:AsistenciaApp.Core.Models"
    xmlns:converters="using:AsistenciaApp.Converters"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:DateToStringConverter x:Key="DateToStringConverter" />
    </Page.Resources>

    <Border Style="{StaticResource CardStyle}">
        <RelativePanel>

            <TextBlock x:ConnectionId='2'
            x:Name="Header"
            Text="Calendario"
            Style="{StaticResource TitleTextBlockStyle}"
            Margin="36,32,0,24" />

            <TextBlock x:ConnectionId='3' x:Name="Information"
                    Text="Consulta los registros de asistencia usando el calendario. Selecciona una fecha y exporta la lista en PDF para firmarla digitalmente."
                     Style="{StaticResource BodyTextBlockStyle}"
                     RelativePanel.Below="Header"
                     Margin="36,0,36,16"/>

            <Border x:ConnectionId='4' x:Name="CalendarBorder"
                RelativePanel.Below="Information"
                Margin="36,0,0,0">
                
                <CalendarView x:ConnectionId='14'
                x:Name="CalendarView"
                Background="{StaticResource CardBackgroundFillColorSecondary}"
                Height="400"
                Width="400"
                Language="es"
                SelectionMode="Single"
                                                                         />
            </Border>

            <StackPanel Orientation="Horizontal"
                    Spacing="10"
                    RelativePanel.Below="CalendarBorder"
                    Margin="36,16,0,0">
                <CalendarDatePicker x:ConnectionId='11' x:Name="CalendarDatePicker1"
                                PlaceholderText="De"
                                                                             />
                <CalendarDatePicker x:ConnectionId='12' x:Name="CalendarDatePicker2"
                                PlaceholderText="Hasta"
                                                                             />
                <Button x:ConnectionId='13' x:Name="ExportButton"
                    Content="Exportar"
                    IsEnabled="False"
                                              
                    Margin="10,0,0,0"/>
            </StackPanel>

            <Border x:ConnectionId='5' x:Name="List"
                RelativePanel.Below="Information"
                RelativePanel.RightOf="CalendarBorder"
                Style="{StaticResource CardStyle}"
                Margin="16,0,0,0">
                
                <ListView x:ConnectionId='6'
                Width="700"
                                                                             
                    Style="{StaticResource CardStyle}">
                    <ListView.Header>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Estudiante" Margin="20,5" Style="{StaticResource BodyStrongTextBlockStyle}" />
                            <TextBlock Grid.Column="1" Text="Marca" Margin="20,5" Style="{StaticResource BodyStrongTextBlockStyle}" />
                        </Grid>
                    </ListView.Header>
                    <ListView.ItemTemplate>
                        <DataTemplate                                        >
                            <Grid x:ConnectionId='8' ColumnDefinitions="3*,2*">
                                <TextBlock x:ConnectionId='9' Grid.Column="0"
                                                                       
                                       Margin="10,5" />
                                <TextBlock x:ConnectionId='10' Grid.Column="1"
                                                                   
                                       Margin="25,5" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Border>

        </RelativePanel>
    </Border>

</Page>


