<Page
    x:Class="AsistenciaApp.Views.AgregarAsistenciaPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AsistenciaApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="using:AsistenciaApp.ViewModels"
    xmlns:models="using:AsistenciaApp.Core.Models" 
    xmlns:converters="using:AsistenciaApp.Converters"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <converters:DateToStringConverter x:Key="DateToStringConverter" />
    </Page.Resources>

    <Grid Padding="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Spacing="15">
            <TextBlock Text="Ingresar Asistencia" Style="{StaticResource HeaderTextBlockStyle}" />

            <DatePicker x:ConnectionId='6'
                x:Name="FechaAsistenciaPicker"
                Date="{Binding FechaActual, Mode=TwoWay}"
                IsEnabled="False">
            </DatePicker>

            <TextBox x:ConnectionId='7' x:Name="CedulaTextBox" PlaceholderText="Ingrese su cédula:" HorizontalAlignment="Left" Width="300"/>

            <Button x:ConnectionId='8' Content="Registrar Asistencia"
                                                            />

            <StackPanel x:ConnectionId='9' x:Name="EstudianteDetallesPanel" Visibility="Collapsed">
                <TextBlock x:ConnectionId='10' x:Name="NombreTextBlock" Text="Nombre: " />
                <TextBlock x:ConnectionId='11' x:Name="SeccionTextBlock" Text="Sección: " />
            </StackPanel>
        </StackPanel>

        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <ListView x:ConnectionId='2' x:Name="AsistenciasListView"
                      Header="Asistencias Registradas" 
                      ItemsSource="{Binding Asistencias}">
                <ListView.ItemTemplate>
                    <DataTemplate                                        >
                        <Grid>
                            <Grid.ContextFlyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem x:ConnectionId='5' Text="Eliminar"                                               />
                                </MenuFlyout>
                            </Grid.ContextFlyout>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Ellipse Grid.RowSpan="3" Width="32" Height="32" Margin="6" 
                                     VerticalAlignment="Center" HorizontalAlignment="Center" 
                                     Fill="{ThemeResource ControlStrongFillColorDefaultBrush}"/>

                            <TextBlock Grid.Column="1" Grid.Row="0"
                                       Text="{Binding Fecha, Converter={StaticResource DateToStringConverter}}"
                                       Style="{ThemeResource BaseTextBlockStyle}" Margin="12,6,0,0"/>
                            <TextBlock Grid.Column="1" Grid.Row="1"
                                       Text="{Binding NombreEstudiante}"
                                       Style="{ThemeResource BodyTextBlockStyle}" Margin="12,0,0,6"/>
                            <TextBlock Grid.Column="1" Grid.Row="2"
                                       Text="{Binding Hora_Entrada}"
                                       Style="{ThemeResource BodyTextBlockStyle}" Margin="12,0,0,6"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>
    </Grid>
</Page>

