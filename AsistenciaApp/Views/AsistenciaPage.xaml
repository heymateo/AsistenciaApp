<Page
    x:Class="AsistenciaApp.Views.AsistenciaPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:AsistenciaApp.ViewModels" xmlns:models="using:AsistenciaApp.Core.Models"
    mc:Ignorable="d">

    <Page.DataContext>
        <vm:AsistenciaViewModel />
    </Page.DataContext>
    
    <StackPanel Orientation="Vertical" Margin="20">

        <CalendarView x:Name="AssistanceCalendar"
                      IsGroupLabelVisible="True"
                      IsOutOfScopeEnabled="True"
                      Language="es"
                      SelectedDates="{Binding SelectedDate, Mode=TwoWay}"
                      SelectionMode="Single"/>


        <TextBlock
            Text="{Binding ResultText}"
            FontSize="14"
            Foreground="Gray"
            Margin="0,10,0,10" />

        <ListView
            ItemsSource="{Binding FilteredEvents}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:Registro_Asistencia">
                    <StackPanel>
                        <TextBlock Text="{Binding Nombre}" FontWeight="Bold" />
                        <TextBlock Text="{Binding Fecha, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}" />
                        <TextBlock Text="{Binding Detalles}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</Page>

